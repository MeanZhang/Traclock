<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mean.traclock">

    <application
        android:name=".TraclockApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hasFragileUserData="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Traclock"
        tools:targetApi="31">
        <activity
            android:name=".ui.AboutActivity"
            android:exported="false"
            android:label="@string/title_activity_about"
            android:theme="@style/Theme.Traclock" />
        <activity
            android:name=".ui.ProjectActivity"
            android:exported="true"
            android:label="@string/title_activity_project"
            android:theme="@style/Theme.Traclock" />
        <activity
            android:name=".ui.BackupRestoreActivity"
            android:exported="true"
            android:label="@string/title_activity_backup_restore"
            android:theme="@style/Theme.Traclock" />
        <activity
            android:name=".test.TestActivity"
            android:exported="true"
            android:label="@string/title_activity_test"
            android:theme="@style/Theme.Traclock" />
        <activity
            android:name=".ui.EditRecordActivity"
            android:exported="true"
            android:label="@string/title_activity_edit_record"
            android:theme="@style/Theme.Traclock.NoActionBar" />
        <activity
            android:name=".ui.EditProjectActivity"
            android:exported="true"
            android:label="@string/title_activity_edit_project"
            android:theme="@style/Theme.Traclock" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Traclock">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>